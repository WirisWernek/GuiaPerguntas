<%- include ('partials/header.ejs') %>

<body>
    <%- include ('partials/navbar.ejs') %>

    <div class="container">
        <hr>
        <h1><%= pergunta.titulo %></h1>
        <p><%= pergunta.descricao %></p>
        <hr>
        <form method="post" action="/salvarresposta">
            <h3>Responda</h3>
            <input type="hidden" name="pergunta" value="<%= pergunta.id %>">
            <label for="corpo">Resposta:</label>
            <textarea class="form-control" name="corpo" placeholder="Digite sua Resposta"></textarea><br>
            <button type="submit" class="btn btn-primary">Responder</button>
        </form>
        <hr>
        <h3>Respostas</h3>
        <hr>
        <% respostas.forEach(resposta => { %>
        <div class="card">
            <div class="card-body">
                <p class="card-title"><%= resposta.corpo %></p>
            </div>
        </div>
        <br>
        <% }) %>
    </div>
</body>
<%- include ('partials/footer.ejs') %>